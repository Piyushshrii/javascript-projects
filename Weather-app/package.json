{
  "type": "module",
  "scripts": {
    "pretest": "rm -rf test-results && mkdir -p test-results",
    "test": "jest --ci --coverage --coverageDirectory=test-results/coverage --reporters=default --reporters=jest-junit"
  },
  "jest": {
    "coverageReporters": ["json", "text", "lcov"],
    "reporters": [
      "default",
      ["jest-junit", { "outputDirectory": "test-results", "outputName": "results.xml" }]
    ]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0"
  }
}
